<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <main>
      <div
        class="uk-section uk-section-small"
        style="height: 750px; display: flex"
      >
        <div
          class="
            uk-container
            uk-container-large
            uk-flex
            uk-flex-middle
            uk-flex-center
          "
          style="
            background-color: white;
            /* height: 200px; */
            width: 40%;
            flex-direction: column;
          "
        >
          <% if (posts.length == 0) { %>
          <div class="alert alert-danger" role="alert">
            Lo sentimos, no hemos encontrado resultados para <%= criteria %> .
          </div>
          <% } else { %> <% posts.forEach(post => { %>
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <a href="/post/detallePost/<%= post.id %>"
                  ><img
                    src="<%= post.image %>"
                    class="img-cover rounded-start"
                    alt="..."
                /></a>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <p>
                    <a
                      href="/users/detalleUsuario/<%= post.user_id %>"
                      style="margin-right: 20px"
                      ><%= post.author.username %></a
                    >
                    <%= post.post_caption %>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <% }) %> <% } %>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
