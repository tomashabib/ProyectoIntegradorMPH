<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>

  <main>
    <div class="uk-section uk-section-small">
      <div class="uk-container uk-container-small posteos-seccion">
        <section class="info-usuario uk-flex uk-flex-around uk-width-1-1 perfil-seccion">
          <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle foto-perfil">
            <img src="<%= user.profile_picture%>" alt="foto de perfil" class="foto-perfil" />
          </div>
          <div class="uk-width-2-3 uk-flex uk-flex-column uk-flex-around">
            <div class="uk-flex uk-flex-middle">
              <h3 class="uk-margin-remove nombre-perfil"><%= user.username%></h3>
              <a href="/users/editarPerfil" uk-icon="icon:cog; ratio: 1.2" class="uk-margin-left"></a>
            </div>
            <div>
              <ul class="red-usuario uk-flex uk-flex-between uk-width-1-2">
                <li>100 posts</li>
                <li>200 seguidores</li>
                <li>300 seguidos</li>
              </ul>
            </div>
          </div>
        </section>

        <section class="muro uk-flex uk-flex-middle uk-flex-center posteos-seccion">
          <% user.post.forEach(post => { %>
          <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>

            <div class="
                  uk-card
                  uk-card-hover
                  uk-card-body
                  uk-flex
                  uk-flex-column
                  uk-flex-middle
                  uk-flex-center
                ">
              <a href="/post/detallePost/<%= post.id %>" class="link-detalle">
                <img src="<%=post.image%>" alt="foto de perfil" class="foto-de-perfil" />
                <p class="uk-text-center"><%= post.post_caption %> </p>
              </a>
            </div>
            <% }) %>
        </section>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>

</html>